@model HavaLimaniMVCprojesi.Models.Personeller

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}
<div style="margin-left:500px;">
    <h1 style="color:aqua">Personel Güncelleme</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PersonelId" class="control-label"></label>
                    <input asp-for="PersonelId" class="form-control" />
                    <span asp-validation-for="PersonelId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PersonelAdi" class="control-label"></label>
                    <input asp-for="PersonelAdi" class="form-control" />
                    <span asp-validation-for="PersonelAdi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PersonelSoyadi" class="control-label"></label>
                    <input asp-for="PersonelSoyadi" class="form-control" />
                    <span asp-validation-for="PersonelSoyadi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Yas" class="control-label"></label>
                    <input asp-for="Yas" class="form-control" />
                    <span asp-validation-for="Yas" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CalismaTarih" class="control-label"></label>
                    <input asp-for="CalismaTarih" class="form-control" />
                    <span asp-validation-for="CalismaTarih" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        Vardiya Durumu
                        <br />
                        <input class="form-check-input" asp-for="Vardiya" /> @Html.CheckBoxFor(model => model.Vardiya,true) Gece
                       @* <input class="form-check-input" asp-for="Vardiya" /> @Html.CheckBoxFor(model => model.Vardiya,false) Gündüz*@
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="UcakId" class="control-label"></label>
                    <input asp-for="UcakId" class="form-control" />
                    <span asp-validation-for="UcakId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HavaLimaniId" class="control-label"></label>
                    <input asp-for="HavaLimaniId" class="form-control" />
                    <span asp-validation-for="HavaLimaniId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Güncelle" class="btn btn-warning" style="margin-top:10px;" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Geri dön</a>
    </div>

</div>
